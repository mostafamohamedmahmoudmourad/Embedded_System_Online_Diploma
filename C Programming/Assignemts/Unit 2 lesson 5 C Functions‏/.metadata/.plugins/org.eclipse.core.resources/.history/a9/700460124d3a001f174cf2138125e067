#include <stdio.h>
#include <stdlib.h>

void Reverse();

int main()
{
	setbuf(stdout,NULL);
	printf("Enter a Sentence: ");
	Reverse();
	return 0;
}


void Reverse()
{
	char arr[50];
	int number, strlen;
	gets(arr);
	while(arr[number]!='\0')
	{
		number++;
	}
	strlen==number;
	for(number=strlen-1;number>=0;number)
	{
		printf("%c",arr[number]);
	}
	return ;
}
