#include <stdio.h>

struct Distance {
	int feet;
	float inch;

}d1,d2;

int main()
{
//	 Distance_t[2];
	int IntFeet =0;
	float FloatInch =0;
	setbuf(stdout,NULL);
	printf("Enter Information for 1st Distance: \n");
	printf("Enter feet:");
	scanf("%u",d1.feet);
	printf("Enter inch: ");
	scanf("%f",d1.inch);
	printf("\nEnter Information for 2st Distance: \n");
	printf("Enter feet:");
	scanf("%d",d2.feet);
	printf("Enter inch: ");
	scanf("%f",d2.inch);
	IntFeet=d1.feet+d2.feet;
	FloatInch=d1.inch+d2.inch;
	if(FloatInch>12){
		FloatInch-=12;
		++IntFeet;
	}
	printf("Sum of Distance %d %.2f",IntFeet,FloatInch);
	return 0;
}



