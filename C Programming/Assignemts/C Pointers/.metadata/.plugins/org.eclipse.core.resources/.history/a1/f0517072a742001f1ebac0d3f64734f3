 *
 *  Ex3: Write a program in C to print a string in reverse using a pointer
 */


#include <stdio.h>

int main()
{

	char str[50];				// Declaring Array to Store The String.
	char revstr[50];			// Declaring Anther Array to Store The Reverse String.
	char *stptr = str;
	char *revptr = revstr;
	int i=0;
	setbuf(stdout,NULL);
	printf("Pointer : Print a string in reverse order : \n\n");
	printf("------------------------------------------------\n\n");
	printf("Input a string : ");
	scanf("%s",str);
	while(*stptr)
	{
		stptr++;
		i++;
	}
	while(i>=0)
	{
		stptr--;
		*revptr = *stptr;
		revptr++;
		--i;
	}
	*revptr='\0';
	printf("Reverse of the string is : %s \n\n",revptr);

	return 0;
}
