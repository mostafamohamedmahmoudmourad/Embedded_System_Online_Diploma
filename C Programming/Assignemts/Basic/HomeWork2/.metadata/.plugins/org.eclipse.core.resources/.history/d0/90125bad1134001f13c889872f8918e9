#include <stdio.h>
#include <stdlib.h>

int main()
{
	float num;
	printf("Enter an integer you want to check:");
	fflush(stdout);
	scanf("%d",&num);
	if((num%2)==0)
	{
		printf("%d is even\n",num);
	}
	else
	{
		printf("%d is odd\n",num);
	}
	return 0;

}
