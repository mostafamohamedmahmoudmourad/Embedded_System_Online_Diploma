#include "lifo.h"
#include <stdio.h>
#include <stdlib.h>

unsigned int buffer1[5];


int main()
{
	int i , temp=0;
	LIFO_BUF_T uart_lifo , I2C_lifo;

	//static allocation
	LIFO_init(&uart_lifo, buffer1, 5);
	//dynamic allocation
	unsigned int* buffer2 = (unsigned int*)malloc(5*sizeof(unsigned int));
	LIFO_init(&I2C_lifo, buffer2, 5);

	for(i=0; i<7;i++)
	{
		if(LIFO_Add_item(&uart_lifo, i) == LIFO_no_full)
			printf("UART_LIFO Add: %d",i);
	}
	for(i=0; i<7;i++)
		{
			if(LIFO_get_item(&uart_lifo, temp) == LIFO_no_empty)
				printf("UART_LIFO Add: %d",temp);
		}


	return 0;
}
