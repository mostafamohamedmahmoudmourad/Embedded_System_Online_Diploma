#ifndef LIFO_H_
#define LIFO_H_


typedef struct {
	unsigned int length;
	unsigned int count;
	unsigned int* base;
	unsigned int* head;
}LIFO_BUF_T;

typedef enum {
	LIFO_no_error,
	LIFO_full,
	LIFO_no_full,
	LIFO_empty,
	LIFO_no_empty,
	LIFO_NULL
}LIFO_status;

LIFO_status LIFO_Add_item (LIFO_BUF_T* lifo_buf, unsigned int item);
LIFO_status LIFO_get_item (LIFO_BUF_T* lifo_buf, unsigned int* item);
LIFO_status LIFO_init (LIFO_BUF_T* lifo_buf, unsigned int* buf, unsigned int length);





#endif /* LIFO_H_ */
